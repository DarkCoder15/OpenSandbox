{
    "include": [
        "sources/**/*.ts",
        "sources/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "outDir": "./build",
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
    },
    "lib": [
        "ES6",
        "ESNext"
    ],
    "ts-node": {
        "esm": true
    }
}